{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["src", "react", "react-dom"],
  "exclude": ["node_modules", "dist"]
}